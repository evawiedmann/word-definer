<h1>Word Definer</h1>

<h3>Saved Words</h3>

<% if @words.any? %>
  <ul>
    <% @words.each do |word| %>
      <li><%= word.spelling %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no words to display.</p>
<% end %>

<form action="/words">
  <div class="form-group">
    <label for="searchID">Search By ID</label>
    <input id="searchID" name="searchID" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<br>
<br>
<form action="/words">
  <button type="submit" name="sorter" class="btn">Sort!</button>
</form>


<a href="/words/new">Add a new word</a>
<br>
<br>

<% @words.each do |word| %>
    <li><a href="/words/<%= word.id %>"><%= word.name %></a></li>
  <% end %>
