<h1>Update <%= @word.spelling() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="spelling">Update spelling</label>
  <input id="spelling" name="spelling" type="text">

  <label for="definition">Update definition</label>
  <input id="definition" name="definition" type="text">

  <button type="submit">Update</button>
</form>

<p><a href="/words">Return to vocabulary list</a></p>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete word</button>
</form>
